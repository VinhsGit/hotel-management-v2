<div class="max-w-3xl mx-auto px-4">
  <div class="flex items-center justify-between">
    <h1 class="flex-1 font-bold text-3xl">Room</h1>

    <div class="flex-wrap lg:flex items-center lg:space-x-3">
      <%= link_to rooms_path, class: button_class(theme: "transparent") do %>
      All Rooms
      <% end %>
      <%= link_to edit_room_path(@room), class: button_class(theme:"primary") do %>
      Edit
      <% end %>
    </div>
  </div>

  <ul class="text-slate-700">
      <li>
        <p class="font-semibold">Bednum:</p>
        <p><%= @room.bedNum %></p>
      </li>
      <li>
        <p class="font-semibold">Description:</p>
        <p><%= @room.description %></p>
      </li>
      <li>
        <p class="font-semibold">Isavailable:</p>
        <p><%= @room.isAvailable %></p>
      </li>
      <li>
        <p class="font-semibold">Checkoutdate:</p>
        <p><%= @room.checkOutDate %></p>
      </li>
  </ul>
</div>
