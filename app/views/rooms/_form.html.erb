<%= form_with(model: room) do |form| %>
<% if room.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(room.errors.count, "error") %> prohibited this room from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% room.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :bedNum, class: label_class %>
          <%= form.number_field :bedNum, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :description, class: label_class %>
          <%= form.text_field :description, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :isAvailable, class: label_class %>
          <%= form.check_box :isAvailable, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :checkOutDate, class: label_class %>
          <%= form.date_field :checkOutDate, class: input_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

<% if room.persisted? %>
<%= link_to "Cancel", room, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", rooms_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>
