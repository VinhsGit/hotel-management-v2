<%= form_with(model: book_room) do |form| %>
<% if book_room.errors.any? %>
<div id="error_explanation" class="bg-red-50 p-6 rounded text-red-800">
  <h2 class="text-lg font-semibold mb-3"><%= pluralize(book_room.errors.count, "error") %> prohibited this book_room from being saved:</h2>

  <ul class="list-disc leading-relaxed">
    <% book_room.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

  <div class="mb-6">
        <%= form.label :checkIn, class: label_class %>
          <%= form.date_field :checkIn, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :checkOut, class: label_class %>
          <%= form.date_field :checkOut, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :description, class: label_class %>
          <%= form.text_field :description, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :room_id, class: label_class %>
          <%= form.collection_select :room_id, Room.all, :id, :id, class: input_class %>
      </div>
  <div class="mb-6">
        <%= form.label :customer_id, class: label_class %>
          <%= form.collection_select :customer_id, Customer.all, :id, :fullName ,class: input_class %>
      </div>

<%= form.submit class: button_class(theme: 'primary') %>

<% if book_room.persisted? %>
<%= link_to "Cancel", book_room, class: "text-neutral-700 underline inline-block ml-3" %>
<% else %>
<%= link_to "Cancel", book_rooms_path, class:  "text-neutral-700 underline inline-block ml-3" %>
<% end %>
<% end %>
